module	datadegister #(
	parameter datawidth = 1
	)
	(
		input				clk,rst,
		input	wire	[datawidth-1,0]	d,
		output	reg	[datawidth-1,0]	q 
	)

always @(posedge clk, posedge rst)
	begin
		if(rst)
			q<='h0;
		else
			q<=d;
	end
endmodule
