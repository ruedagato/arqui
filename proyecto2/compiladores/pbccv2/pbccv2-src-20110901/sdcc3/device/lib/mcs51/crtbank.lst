                             41 ; /*-------------------------------------------------------------------------
                             42 ;   Example for SiLabs C8051F12x / C8051F13x with 128kB code memory
                             43 ;   divided into 4 banks of 32kB
                             44 ;   These devices have an sfr called PSBANK containing two parts:
                             45 ;   COBANK (bit 5:4): Constant Operations Bank
                             46 ;   IFBANK (bit 1:0): Instruction Fetch Bank
                             47 ;   From 0x0000 to 0x7FFF bank 0 is always accessed
                             48 ;   From 0x8000 to 0xFFFF bank COBANK is accessed for reading with movc
                             49 ;   From 0x8000 to 0xFFFF bank IFBANK is accessed for executing instructions
                             50 ;
                             51 ;   Make your own copy of this file,
                             52 ;   adapt it to your situation,
                             53 ;   and compile/link it in your project
                             54 ; -------------------------------------------------------------------------*/
                             55 
                             56 	.globl _PSBANK
                             57 
                             58 	.area HOME    (CODE)
                             59 
   0000                      60 __sdcc_banked_call::
   0000 C0*00                61 	push	_PSBANK		;save return bank
   0002 C8                   62 	xch	a,r0		;save Acc in r0, do not assume any register bank
   0003 C0 E0                63 	push	acc		;push LSB address
   0005 E9                   64 	mov	a,r1
   0006 C0 E0                65 	push	acc		;push MSB address
   0008 EA                   66 	mov	a,r2		;get new bank
   0009 54 0F                67 	anl	a,#0x0F		;remove storage class indicator
   000B 53*00 F0             68 	anl	_PSBANK,#0xF0
   000E 42*00                69 	orl	_PSBANK,a	;select bank
   0010 C8                   70 	xch	a,r0		;restore Acc
   0011 22                   71 	ret			;make the call
                             72 
   0012                      73 __sdcc_banked_ret::
   0012 D0*00                74 	pop	_PSBANK		;restore bank
   0014 22                   75 	ret			;return to caller
