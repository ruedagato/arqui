                             30 ; overlayable bit register bank
                             31 ;--------------------------------------------------------
                             32 	.area BIT_BANK	(REL,OVR,DATA)
   0000                      33 bits:
   0000                      34 	.ds 1
                             35 
                    0000     36 	ar0 = 0x00
                    0001     37 	ar1 = 0x01
                             38 
                             39 	.area HOME    (CODE)
                             40 
                             41 ; Pop registers r0..r7 & bits from xstack
                             42 ; Expect mask in B
   0000                      43 __sdcc_xpop_regs_bits::
   0000 12s00r00             44 	lcall	__sdcc_xpop_regs
   0003 C0 00                45 	push	ar0
   0005 A8*00                46 	mov	r0,_spx
   0007 18                   47 	dec	r0
   0008 E2                   48 	movx	a,@r0		;pop bits
   0009 F5*00                49 	mov	bits,a
   000B 15*00                50 	dec	_spx
   000D D0 00                51 	pop	ar0
   000F 22                   52 	ret
