                             29         .module crt0
                             30        	.globl	_main
                             31 
                             32 	.area	_HEADER (ABS)
                             33 	;; Reset vector
   0000                      34 	.org 	0
   0000 C3r00s01             35 	jp	init
                             36 
   0008                      37 	.org	0x08
   0008 ED 4D                38 	reti
   0010                      39 	.org	0x10
   0010 ED 4D                40 	reti
   0018                      41 	.org	0x18
   0018 ED 4D                42 	reti
   0020                      43 	.org	0x20
   0020 ED 4D                44 	reti
   0028                      45 	.org	0x28
   0028 ED 4D                46 	reti
   0030                      47 	.org	0x30
   0030 ED 4D                48 	reti
   0038                      49 	.org	0x38
   0038 ED 4D                50 	reti
                             51 
   0100                      52 	.org	0x100
   0100                      53 init:
                             54 	;; Stack at the top of memory.
   0100 31 FF FF             55 	ld	sp,#0xffff
                             56 
                             57         ;; Initialise global variables
   0103 CDr00s00             58         call    gsinit
   0106 CDr00s00             59 	call	_main
   0109 C3r04s00             60 	jp	_exit
                             61 
                             62 	;; Ordering of segments for the linker.
                             63 	.area	_HOME
                             64 	.area	_CODE
                             65         .area   _GSINIT
                             66         .area   _GSFINAL
                             67 
                             68 	.area	_DATA
                             69 	.area	_BSEG
                             70         .area   _BSS
                             71         .area   _HEAP
                             72 
                             73         .area   _CODE
   0000                      74 __clock::
   0000 3E 02                75 	ld	a,#2
   0002 CF                   76         rst     0x08
   0003 C9                   77 	ret
                             78 
   0004                      79 _exit::
                             80 	;; Exit - special code to the emulator
   0004 3E 00                81 	ld	a,#0
   0006 CF                   82         rst     0x08
   0007                      83 1$:
   0007 76                   84 	halt
   0008 18 FD                85 	jr	1$
                             86 
                             87         .area   _GSINIT
   0000                      88 gsinit::
                             89 
                             90         .area   _GSFINAL
   0000 C9                   91         ret
