                             30 ; overlayable bit register bank
                             31 ;--------------------------------------------------------
                             32 	.area BIT_BANK	(REL,OVR,DATA)
   0000                      33 bits:
   0000                      34 	.ds 1
                             35 
                    0000     36 	ar0 = 0x00
                    0001     37 	ar1 = 0x01
                             38 
                             39 	.area HOME    (CODE)
                             40 
                             41 ; Push registers r0..r7 & bits on xstack (r0 always)
                             42 ; Expect allocation size in ACC and mask in B
   0000                      43 __sdcc_xpush_regs_r0::
   0000 C0 00                44 	push	ar0
   0002 12s00r00             45 	lcall	__sdcc_xpush_regs
   0005 D0 E0                46 	pop	acc
   0007 F2                   47 	movx	@r0,a
   0008 F8                   48 	mov	r0,a
   0009 22                   49 	ret
